# Nuptily Wedding Application Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== REQUIRED SUPABASE CONFIGURATION =====
# Get these from your Supabase project dashboard
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ===== ADMIN CONFIGURATION =====
# Service role key for admin operations (keep secure!)
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ===== OPTIONAL SERVICES =====
# Adobe Fonts API (for enhanced typography)
VITE_ADOBE_FONTS_API_KEY=your_adobe_fonts_api_key

# Google Maps (for venue mapping)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Mapbox (alternative mapping service)
VITE_MAPBOX_TOKEN=your_mapbox_token

# File Upload Service
VITE_UPLOADCARE_PUBLIC_KEY=your_uploadcare_public_key

# Analytics and Monitoring
VITE_GOOGLE_ANALYTICS_ID=your_ga4_id
VITE_SENTRY_DSN=your_sentry_dsn

# WebRTC Configuration
VITE_WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302

# ===== DEVELOPMENT FLAGS =====
# Set to true to enable development features
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_PERFORMANCE_MONITOR=true

# ===== SECURITY SETTINGS =====
# Content Security Policy (leave default unless needed)
VITE_CSP_REPORT_URI=https://your-domain.com/csp-report

# ===== FEATURE FLAGS =====
# Enable/disable specific features
VITE_ENABLE_VIDEO_CALLING=true
VITE_ENABLE_REAL_TIME_CHAT=true
VITE_ENABLE_PHOTO_UPLOADS=true
VITE_ENABLE_ADMIN_DASHBOARD=true

# ===== PRODUCTION DEPLOYMENT =====
# Only needed for production builds
VITE_APP_URL=https://your-wedding-domain.com
VITE_CDN_URL=https://your-cdn-domain.com